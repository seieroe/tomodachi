      <% my_heart_string_arr << heart_string %>
    <% elsif current_user == heart_string.tomodachi %>
      <% my_heart_string_arr << heart_string %>
    <% end %>
    <% end %>
  <%= my_heart_string_arr.length %>
  tomodachi(s): 💕</h4>

<ul>

<% HeartString.all.each do |heart_string| %>
   <% if current_user == heart_string.user %>
     😍<%= link_to heart_string.tomodachi.name, heart_string_path(heart_string) %><br>
