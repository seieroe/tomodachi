
chat page


<%= form_for @message do |f| %>
  <ul>
    write a message: <%= f.text_field :content %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :chat_id %>
    <%= f.hidden_field :valentime, value: Time.now %>
  </ul>

  <br>

  <%= f.submit %>
<% end %>




